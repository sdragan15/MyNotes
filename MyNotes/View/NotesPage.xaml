<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyNotes.View.NotesPage"
             Title="Notes"
             xmlns:model="clr-namespace:MyNotes.Application.Model;assembly=MyNotes.Application"
             xmlns:viewmodel="clr-namespace:MyNotes.ViewModel"
             x:DataType="viewmodel:NotesViewModel">
    <Grid RowDefinitions="Auto, *, Auto">
        <FlexLayout Grid.Row="0" 
                    Wrap="Wrap" 
                    Direction="Row"
                    AlignItems="Start"
                    JustifyContent="Start"
                    Padding="10"
                    BindableLayout.ItemsSource="{Binding NoteItems}">
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="model:NotesDto">
                    <Frame Padding="20" 
                           BackgroundColor="#588558" 
                           HasShadow="True" 
                           BorderColor="#30000000" 
                           MaximumWidthRequest="150"
                           MinimumWidthRequest="100"
                           Margin="4">
                        <Frame.Shadow>
                            <Shadow  Brush="Black"
                                    Opacity="0.5"
                                    Radius="10"
                                    Offset="3,3"/>
                        </Frame.Shadow>
                        <VerticalStackLayout Spacing="10" MaximumWidthRequest="130" MaximumHeightRequest="100">
                            <VerticalStackLayout.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditItemCommand}"
                                    CommandParameter="{Binding .}" />
                            </VerticalStackLayout.GestureRecognizers>
                            <Label  Text="{Binding Header}" 
                                    FontAttributes="Bold" 
                                    FontSize="Header"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="1">
                            </Label>
                            <Label  Text="{Binding Content}"
                                    LineBreakMode="TailTruncation"
                                    MaxLines="3"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
        <Button Grid.Row="2"
                Text="Create"
                Command="{Binding CreateItemCommand}"
                Margin="20" />
    </Grid>
    
</ContentPage>