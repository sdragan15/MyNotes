<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyNotes.View.NotesCreatePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:MyNotes.ViewModel"
    x:DataType="viewmodel:NotesCreateViewModel"
    Title="Create note">

    <Grid Padding="16" RowDefinitions="Auto,*,Auto">

        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" ColumnDefinitions="*">
            <Label Text="Title" FontAttributes="Bold" />
            <Entry Grid.Row="1"
                   x:Name="HeaderEntry"
                   Placeholder="Enter title..."
                   Text="{Binding HeadTitle, Mode=TwoWay}"
                   ReturnType="Next" />
        </Grid>

        <Editor Grid.Row="1"
                x:Name="BodyEditor"
                Placeholder="Type your note..."
                Text="{Binding Body, Mode=TwoWay}"
                AutoSize="Disabled"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand"
                MaxLength="20000"
                Margin="0,8" />

        <Grid Grid.Row="2" ColumnDefinitions="*,*">
            <Button Grid.Column="0"
                    Text="Cancel"
                    Command="{Binding CancelCommand}"
                    Margin="0,10,10,0" />
            <Button Grid.Column="1"
                    Text="Create"
                    Command="{Binding CreateCommand}"
                    IsEnabled="{Binding CanCreate}"
                    Margin="0,10,0,0" />
        </Grid>
    </Grid>
</ContentPage>
