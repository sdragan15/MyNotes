<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:viewmodel="clr-namespace:MyNotes.ViewModel"
                xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                x:Class="MyNotes.View.NotesCreatePage"
                CanBeDismissedByTappingOutsideOfPopup="True">
    <Frame Padding="16" CornerRadius="12" HasShadow="True"
       HorizontalOptions="Center" VerticalOptions="Center">
        <VerticalStackLayout Spacing="12">
            <Label Text="Enter text" FontAttributes="Bold" />


            <Editor x:Name="MyEditor" Placeholder="pisi pisi miii"/>


            <FlexLayout Direction="Row"
                    AlignItems="Stretch"
                    JustifyContent="Start">
                <Button Text="Done" 
                    FlexLayout.Basis="0%"
                    FlexLayout.Grow="1"/>
                    <BoxView WidthRequest="10" BackgroundColor="Transparent"/>
            </FlexLayout>

        </VerticalStackLayout>
    </Frame>
</toolkit:Popup>